<% provide(:title,  "投稿者一覧") %>
<%= link_to "視聴者新規作成画面へ", new_user_path, class: "btn btn-lg btn-block btn-outline-primary" %>
<br>
<%= current_user.name %>様がログイン中
  <div class="card">
    <div class="card-body table-responsive p-0">
      <table class="table table-hover text-nowrap"> 
        <tbody>
          <% @users.each do |user| %>
          <tr align="center">
            <td><%= link_to user.name, user_path(user) %></td>
            <td><%= user.email %></td>
            <td><%= link_to "削除", user_path(user), method: :delete, data: { confirm: "#{user.name}の視聴者情報を削除します。本当によろしいですか？" }, class: "btn btn-md btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to "ログアウト", destroy_viewer_session_path, class:"nav-link", method: :delete %>